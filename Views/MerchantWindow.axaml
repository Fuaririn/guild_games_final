<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GuildGame.Views.MerchantWindow"
        Width="900" Height="600"
        Title="Marchand">

  <DockPanel Margin="12">

    <Border DockPanel.Dock="Top" Padding="10" CornerRadius="10">
      <StackPanel Orientation="Horizontal" Spacing="18">
        <TextBlock Text="{Binding Or, StringFormat=Or: {0}}" />
        <TextBlock Text="{Binding Nourriture, StringFormat=Nourriture: {0}}" />
        <TextBlock Text="{Binding Soins, StringFormat=Soins: {0}}" />
        <TextBlock Text="{Binding WeaponKits, StringFormat=Kits arme: {0}}" />
        <TextBlock Text="{Binding ArmorKits, StringFormat=Kits armure: {0}}" />
      </StackPanel>
    </Border>

    <Grid ColumnDefinitions="*,*" Margin="0,12,0,0">

      <Border Grid.Column="0" Padding="10" CornerRadius="10" Margin="0,0,12,0">
        <StackPanel>
          <TextBlock Text="Recrutement (offres du matin)" FontSize="18" Margin="0,0,0,8"/>

          <ListBox ItemsSource="{Binding Offers}" SelectedItem="{Binding SelectedOffer}">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <StackPanel>
                  <TextBlock Text="{Binding Hero.Nom}" />
                  <TextBlock Text="{Binding Hero.Classe, StringFormat=Classe: {0}}" FontSize="12"/>
                  <TextBlock Text="{Binding Price, StringFormat=Prix: {0} or}" FontSize="12"/>
                </StackPanel>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>

          <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
            <Button Content="Recruter" Command="{Binding RecruitCommand}" />
            <Button Content="Rafraîchir (2 or)" Command="{Binding RefreshOffersCommand}" />
          </StackPanel>
        </StackPanel>
      </Border>

      <Border Grid.Column="1" Padding="10" CornerRadius="10">
        <StackPanel Spacing="10">
          <TextBlock Text="Achats" FontSize="18"/>

          <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Nourriture +5 (5 or)" Command="{Binding BuyFoodCommand}" />
            <Button Content="Soin +1 (8 or)" Command="{Binding BuyHealItemCommand}" />
          </StackPanel>

          <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Kit arme +1 (10 or)" Command="{Binding BuyWeaponKitCommand}" />
            <Button Content="Kit armure +1 (10 or)" Command="{Binding BuyArmorKitCommand}" />
          </StackPanel>

          <TextBlock Text="Upgrades de guilde" FontSize="18" Margin="0,10,0,0"/>
          <TextBlock Text="{Binding CostsInfo}" FontSize="12"/>

          <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="{Binding InfirmerieLvl, StringFormat=Infirmerie (lvl {0})}"
                    Command="{Binding UpgradeInfirmerieCommand}" />
            <Button Content="{Binding CuisineLvl, StringFormat=Cuisine (lvl {0})}"
                    Command="{Binding UpgradeCuisineCommand}" />
          </StackPanel>

          <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="{Binding EntrainementLvl, StringFormat=Entraînement (lvl {0})}"
                    Command="{Binding UpgradeTrainingCommand}" />
            <Button Content="{Binding EntrepotLvl, StringFormat=Entrepôt (lvl {0})}"
                    Command="{Binding UpgradeEntrepotCommand}" />
          </StackPanel>

          <TextBlock Text="Effets : Infirmerie=meilleurs soins+récup, Cuisine=moins de nourriture/jour, Entraînement=XP passif, Entrepôt=+ marchandises."
                     FontSize="12" TextWrapping="Wrap"/>
        </StackPanel>
      </Border>

    </Grid>
  </DockPanel>
</Window>
